---
import Section from "../Section.astro";

import { getI18N } from "@/i18n/";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
const { projects } = i18n.cv;
---

<Section title={i18n.PROJECTS} noPrint>
  <ul>
    {
      projects.map(
        ({ url, description, highlights, name, isActive, image }) => {
          return (
            <li class="tooltip">
              {image && <span class="tooltiptext">Click to expand</span>}
              <article id="project">
                {image && <img src={image} alt="GFG image" />}
                <header>
                  <h3>
                    {url ? (
                      <a
                        href={url}
                        title={`Ver el proyecto ${name}`}
                        target="_blank"
                        rel="noopener noreferrer"
                      >
                        {name}
                      </a>
                    ) : (
                      name
                    )}
                    {isActive && <span>•</span>}
                  </h3>
                  <p>{description}</p>
                </header>
                <footer>
                  {highlights.map((highlight) => (
                    <span>{highlight}</span>
                  ))}
                </footer>
              </article>
            </li>
          );
        }
      )
    }
  </ul>
</Section>

<script>
  // Encuentra todos los botones con la clase `alert` en la página.
  const buttons = document.querySelectorAll("article#project");

  // Maneja los clics en cada botón.
  buttons.forEach((button) => {
    button.addEventListener("click", (ev) => {
      const element = ev.currentTarget as Element;
      const img = element.querySelector("img");
      if (!img) return;
      img.style.display = img.style.display === "block" ? "none" : "block";
    });
  });
</script>

<style>
  .tooltip {
    position: relative;

    & .tooltiptext {
      visibility: hidden;
      background-color: #888;
      opacity: 0.5;
      color: #fff;
      border-radius: 6px;
      padding: 5px;
      position: absolute;
      z-index: 1;
      right: 0;
      font-size: 10px;
    }
    &:hover .tooltiptext {
      visibility: visible;
    }
  }
