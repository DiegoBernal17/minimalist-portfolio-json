---
import { getStartAndEndDate } from "@/utils/format";
import Section from "../Section.astro";

import { getI18N } from "@/i18n/";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
const { work } = i18n.cv;
---

<Section title={i18n.WORK_EXPERIENCE} breakPage>
  <ul>
    {
      work[0].endDate !== null && (
        <li class="next-company no-print">
          <article>
            <header>
              <div>
                <h3>{i18n.THE_NEXT_BIG_COMPANY.TITLE}</h3>
                <h4> -</h4>
              </div>
              <time>{i18n.THE_NEXT_BIG_COMPANY.COMING_SOON}</time>
            </header>
            <footer>
              <p>{i18n.THE_NEXT_BIG_COMPANY.SUMMARY}</p>
            </footer>
          </article>
        </li>
      )
    }
    {
      work.map(({ name, startDate, endDate, position, summary, tasks }) => {
        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>{name}</h3>
                  <h4>{position}</h4>
                </div>
                <time>{getStartAndEndDate(startDate, endDate)}</time>
              </header>
              <footer class="work-experience">
                <p>{summary}</p>
                <ul>
                  {tasks?.map(({ summary, technologies }) => (
                    <li>
                      {summary}{" "}
                      {technologies && technologies?.length > 0 && (
                        <small>({technologies?.join(", ")})</small>
                      )}
                    </li>
                  ))}
                </ul>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  .next-company {
    background-color: rgba(125, 125, 125, 0.1);
    padding: 14px;
    margin: -10px;
    margin-top: 0;
    margin-bottom: 0;
    border-radius: 4px;
    opacity: 0.7;
    transform: scale(0.95);
    user-select: none;

    transition: all 300ms ease-in-out;
    &:hover {
      opacity: 1;
      transform: none;
    }
  }

  ul {
    display: flex;
    flex-direction: column;
    gap: 28px;
  }

  article h3 {
    font-weight: 500;
    color: var(--title-color);
  }

  article h4 {
    color: var(--light-color);
    font-weight: 400;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 6px;
  }

  time {
    color: var(--light-color);
    font-size: 0.85rem;
  }

  .work-experience {
    font-size: 0.9rem;
    p {
      margin-bottom: 10px;
    }
    ul {
      list-style: disc;
      margin-left: 20px;
      color: var(--light-color);
      gap: 10px;
      small {
        color: var(---color);
        opacity: 0.6;
      }
    }
  }

  @media print {
    ul {
      gap: 14px;
    }
  }
</style>
